{% extends 'base.html.twig' %}

{% block body %}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Все бренды</h1>
        <p class="lead text-muted">
            Тут вы можете отредактировать названия бренда.
        </p>
        <p>
            <a href="{{ path('adminMainPage') }}" class="btn btn-secondary">На главную страницу</a>
        </p>
    </div>
</section>
<div class="album py-5 bg-light">
    <div id="container">
        <h2>Редактор брендов</h2>
        <div class="row">
            {% for item in brands %}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <form action="{{ path('editBrand', {'id': item.id}) }}" method="post">
                            <input type="text" value="{{ item.name }}" name="brand">
                            <button type="submit" class="btn btn-done">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Сохранить
                            </button>
                        </form>
                        <form class="form-group" action="{{ path('deleteBrand', {'id': item.id}) }}"
                              method="post">
                            <input type="hidden" name="_method" value="delete">
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Удалить
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endblock %}

    {% block stylesheets %}

    {% endblock %}
