{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Редактор контактов</h1>
            <p class="lead text-muted">
                Тут вы можете отредактировать контакты магазина.
            </p>
            <p>
                <a href="{{ path('adminMainPage') }}" class="btn btn-secondary">На главную страницу</a>
            </p>
        </div>
    </section>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <h2>Редактор контактов</h2>
        <p>
            {% for get in address %}
        <form action="{{ path('saveContacts') }}" method="post">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Номер телефона:</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                       value="{{ get.phone }}" name="phone">
            </div>
            <input type="text" id="id" name="id" hidden value="1">

            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Адрес:</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                       value="{{ get.address }}" name="address">
            </div>
            <input type="submit" value="Сохранить" class="btn btn-success">
        </form>
        {% endfor %}
        </p>
    </main>
{% endblock %}

{% block stylesheets %}

{% endblock %}
