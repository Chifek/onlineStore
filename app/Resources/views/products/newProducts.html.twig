{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Добро пожаловать в </span> админ.панель
                </h1>
                <a href="{{ path('adminMainPage') }}">На главную админ.панели</a>
            </div>
            <div id="next">
                <h2>Добавить новый товар: </h2>
                <p>
                <form action="{{ path('senddata') }}" method="post">
                    <label for="title_id">Наименование: </label>
                    <input type="text" name="title" id="title_id" required> <br>

                    <label for="price_id">Цена: </label>
                    <input type="number" name="price" id="price_id" required> <br>

                    <label for="description_id">Подробное описание: </label> <br>
                    <textarea id="description_id" name="description" required autofocus></textarea> <br>

                    <label for="categoryId">Выберите категорию: </label>
                    <select name="categoryId" id="categoryId">
                        {% for item in categories %}
                            <option value="{{ item.id }}">{{ item.name }}</option>
                        {% endfor %}
                    </select> <br>

                    <label for="discount">Цена со скидкой: </label>
                    <input type="number" name="discount" id="discount"> <br>

                    <input type="submit" value="Сохранить">
                </form>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
